@model IEnumerable<Biblioteca.Models.RegisterModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card-group gap-5">
    @foreach (var item in Model)
    {
        if(item.Returned == true){
            <div class="card mb-3 border border-success rounded" style="min-width: 540px;">
                <div class="card-header text-success bg-success text-white d-flex justify-content-between">
                    <div>
                        <label>Returned</label>
                        <a>@Html.DisplayFor(modelItem => item.Returned)</a>
                    </div>
                    @if(DateTime.Now > item.Devolucao){
                        <div class="">
							<label>Book Delayed: @((DateTime.Now - item.Devolucao).Days.ToString())</label>
                        </div>                        
                    }
                </div>
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="..." class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8 d-flex">
                        <div class="card-body text-success">
                            <h5 class="card-title fw-bolder">@Html.DisplayFor(modelItem => item.Book.NomeLivro)</h5>
                            <div class="mb-2">
                                <label class="card-subtitle fw-bolder">Emprestimo</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Emprestimo)</small></p>
                            </div>
                            <div>
                                <label class="card-subtitle fw-bolder">Devolucao</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Devolucao)</small></p>
                            </div>
                        </div>
                        <div class="d-flex flex-column mt-3 mb-3 me-3 gap-2">
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.RigisterId">Edit</a>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.RigisterId">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RigisterId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (item.Returned != true && DateTime.Now > item.Devolucao)
        {
            <div class="card mb-3 border border-warning rounded" style="min-width: 540px;">
                <div class="card-header bg-warning d-flex justify-content-between">
                    <div>
                        <label>Returned</label>
                        <a>@Html.DisplayFor(modelItem => item.Returned)</a>
                    </div>
                    @if (DateTime.Now > item.Devolucao)
                    {
                        <div class="">
                            <label>Book Delayed: @((DateTime.Now - item.Devolucao).Days.ToString())</label>
                        </div>
                    }
                </div>
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="..." class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8 d-flex">
                        <div class="card-body">
                            <h5 class="card-title fw-bolder">@Html.DisplayFor(modelItem => item.Book.NomeLivro)</h5>
                            <div class="mb-2">
                                <label class="card-subtitle fw-bolder">Emprestimo</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Emprestimo)</small></p>
                            </div>
                            <div>
                                <label class="card-subtitle fw-bolder">Devolucao</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Devolucao)</small></p>
                            </div>
                        </div>
                        <div class="d-flex flex-column mt-3 mb-3 me-3 gap-2">
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.RigisterId">Edit</a>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.RigisterId">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RigisterId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card mb-3 border rounded" style="min-width: 540px;">
                <div class="card-header">
                    <label>Returned</label>
                    <a>@Html.DisplayFor(modelItem => item.Returned)</a>
                </div>
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="..." class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8 d-flex">
                        <div class="card-body">
                            <h5 class="card-title fw-bolder">@Html.DisplayFor(modelItem => item.Book.NomeLivro)</h5>
                            <div class="mb-2">
                                <label class="card-subtitle fw-bolder">Emprestimo</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Emprestimo)</small></p>
                            </div>
                            <div>
                                <label class="card-subtitle fw-bolder">Devolucao</label>
                                <p class="card-text"><small class="text-body-secondary">@Html.DisplayFor(modelItem => item.Devolucao)</small></p>
                            </div>
                        </div>
                        <div class="d-flex flex-column mt-3 mb-3 me-3 gap-2">
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.RigisterId">Edit</a>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.RigisterId">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RigisterId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        
    }
</div>


